<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script defer src="/js/admin-dashboard.js"></script>
  <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>

<body>
  <div class="container">
    <h2>Welcome to the Admin Dashboard</h2>

    <!-- Add Course Form -->
    <div class="form-container">
      <h3>Add a Course</h3>
      <form id="addCourseForm">
        <label for="name">Course Name:</label>
        <input type="text" id="name" name="name" placeholder="e.g., Data Compression" required>

        <label for="department">Department:</label>
        <input type="text" id="department" name="department" placeholder="e.g., Computer Science" required>

        <label for="level">Level:</label>
        <input type="text" id="level" name="level" placeholder="e.g., Intermediate" required>

        <label for="time">Time:</label>
        <input type="text" id="time" name="time" placeholder="e.g., 10:00 AM - 11:30 AM" required>

        <label for="days">Days:</label>
        <input type="text" id="days" name="days" placeholder="e.g., MTW" required>

        <label for="seats">Seats:</label>
        <input type="number" id="seats" name="seats" placeholder="e.g., 30" required>

        <label for="prerequisites">Prerequisites:</label>
        <select id="prerequisites" multiple>
          <option value="">Select prerequisite courses</option>
        </select>

        <button type="submit">Add Course</button>
      </form>
    </div>

    <hr>

    <!-- Register Student Form -->
    <div class="form-container">
      <h3>Register Student for a Course</h3>
      <form id="registerStudentForm">
        <label for="rollNumber">Student Roll Number:</label>
        <input type="text" id="rollNumber" name="rollNumber" required>

        <label for="AddCourses">Courses :</label>
        <select id="AddCourses" multiple>
          <option value="">Select courses</option>
        </select>

        <button type="submit">Register Student</button>
      </form>
    </div>

    <hr>

    <!-- Show all courses -->
    <div class="course-list">
      <h3>All Courses</h3>
      <ul id="courseList"></ul>
    </div>

    <hr>

    <!-- show all students -->
    <div class="studentList">
      <h3>All Students</h3>
      <ul id="studentList"></ul>
    </div>

    <hr>

    <div class="reports">
      <h3>Reports</h3>
      <button id="generateReport">Generate Report</button>
      <div id="report"></div>
    </div>
</body>

</html>